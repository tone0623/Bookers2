<h1>User info</h1>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
  <h1>Name</h1>
  <p><%= @user.name %></p>
  <h1>Introduction</h1>
  <p><%= @user.introduction %><p>
  <p></p>
  
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
